version: '2'
services:
  flask-app:
    image: {{ app_image }}
    hostname: flask
    deploy:
      resources:
        limits:
          memory: {{ docker_memory }}  # 1GB of RAM
          cpus: '{{ docker_cpu }}'  # 0.3 cores           
    restart: always
    networks:
      - my_network
    volumes:
      - secret-keys-volume:/app/secrets
    environment:
      - TUNING={{ tuning }}
      - DEBUG={{ debug }}
      - EXTERNAL_URL={{ external_url }}
      - CLIENT={{ client }}
      - INTERACTION_MODE={{ interaction_mode }}
      - DEVICE_ID={{ device_ID }}
    ports:
      - ":8181"

  nginx:
    image: nginx:latest
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - flask-app
    ports:
      - "80:80"
    networks:
      - my_network

volumes:
  secret-keys-volume:
  app_data:
    driver: local
    driver_opts:
      type: tmpfs
      device: tmpfs
      o: size={{ docker_storage }}

networks:
  my_network:
  

